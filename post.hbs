{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#post}}

<div class="index-page">
  <sidebar>
    <div class="avatar"><img src="{{asset "avatar.png"}}" height="160" /></div>
    <h1>Software Engineer</h1>
    <p class="social-links">
      <a href="https://www.linkedin.com/in/umairabid/" target="_blank"><i class="fab fa-linkedin"></i></a>
      <a href="https://github.com/umairabid" target="_blank"><i class="fab fa-github-square"></i></a>
    </p>
    {{navigation}}
  </sidebar>
  {{!-- Everything inside the #post block pulls data from the page --}}
  <section class="main-section">
    <article class="article {{post_class}}">
      <h1 class="article-title">{{title}}</h1>
      {{content}}
    </article>
  </section>
</div>

{{/post}}
